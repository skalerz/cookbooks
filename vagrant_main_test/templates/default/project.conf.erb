<VirtualHost *:80>
    DocumentRoot <%= @node[:vagrant][:directory] %>/www
    ServerName local.ben.com
</VirtualHost>

<VirtualHost *:80>
    DocumentRoot <%= @node[:vagrant][:directory] %>/phpmyadmin
    ServerName local.phpmyadmin.com
</VirtualHost>

<VirtualHost *:80>
    DocumentRoot <%= @node[:vagrant][:directory] %>/Jobeet/web
    ServerName jobeet.local
    ErrorLog <%= @node[:vagrant][:directory] %>/logs/jobeet-error.log
    CustomLog <%= @node[:vagrant][:directory] %>/logs/jobeet-access.log combined
    <Directory "<%= @node[:vagrant][:directory] %>/Jobeet/web">
        AllowOverride All
        Allow from All
    </Directory>
</VirtualHost>
